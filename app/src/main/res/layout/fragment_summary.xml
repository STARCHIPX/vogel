<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/selectedOptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Option: "
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/selectedTimeOfDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedOptionTextView"
        android:layout_marginTop="20dp"
        android:text="Selected Time of Day: " />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedTimeOfDayTextView"
        android:layout_marginTop="50dp"
        android:text="Send" />

</RelativeLayout>
