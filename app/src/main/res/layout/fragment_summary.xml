<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/HeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Übersicht zur Buchung"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/selectedDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/selectedTimeOfDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedDateTextView"
        android:text="Selected Time of Day: "
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/selectedDurationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedTimeOfDayTextView"
        android:text="Selected Duration: "
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/selectedOptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedDurationTextView"
        android:layout_marginTop="20dp"
        android:text="Selected Option: "/>

    <TextView
        android:id="@+id/selectedPolygonsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedOptionTextView"
        android:text="Polygons: "
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedPolygonsTextView"
        android:layout_marginTop="50dp"
        android:text="Zurück" />

    <Button
        android:id="@+id/buttonSaveToDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedPolygonsTextView"
        android:layout_marginTop="50dp"
        android:text="Speichern"
        android:layout_toEndOf="@id/buttonBack"
        android:layout_marginStart="70dp"/>

</RelativeLayout>
